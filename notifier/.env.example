# ============================================
# Earnings Call Notifier - 環境變數設定
# ============================================

# 後端分析 API Base URL（必填）
ANALYSIS_API_BASE=https://xxxx.zeabur.app

# LINE Messaging API（必填）
LINE_CHANNEL_ACCESS_TOKEN=your_channel_access_token_here
LINE_TO=U1234567890abcdef...

# Admin API 認證 Token（必填）
ADMIN_TOKEN=your_secure_admin_token

# ============================================
# 可選參數（有預設值）
# ============================================

# 最小市值門檻（美元）
MIN_MARKET_CAP=1000000000

# 每日最多分析股數
MAX_SYMBOLS=15

# 往前查找天數（處理週末/假日）
LOOKBACK_DAYS=7

# 信心度門檻（0~1）
CONF_THRESHOLD=0.65

# API 請求間隔（毫秒）
REQUEST_DELAY_MS=300

# 伺服器埠號
PORT=3000

# 日誌等級（trace, debug, info, warn, error, fatal）
LOG_LEVEL=info
